{
  "extends": "ts-node/node16/tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "types": ["node"],
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
